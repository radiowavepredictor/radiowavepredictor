            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",   // タスクと同じ作業ディレクトリ
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // タスクと同じ環境変数
            },
            "python": "C:/Users/kamag/anaconda3/python.exe"  // タスクと同じ Python
        }
    ]
}
